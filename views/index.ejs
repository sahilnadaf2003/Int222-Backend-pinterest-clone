<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw]  bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-10 text-zinc-700 text-center font-semibold tracking-tight capitalize leading-none">Welcome To Pinterest</h1>
      <% if (error.length > 0) { %>
        <p class="text-red-600 text-center"><%= error %></p>
    <% } %>
      <form action="/login" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <a href="#" class="mt-2 text-zinc-500 font-semibold inline-block">Forgot password</a>
        <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-700 mt-6 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy Notice at collection; Opens a new tab.</p>
      </form>
      <a href="/register" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Don't have an account ?</a>
    </div>
  </div>
  <% include ./partials/footer.ejs %>